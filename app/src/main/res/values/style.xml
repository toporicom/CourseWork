<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ThemeSwitcher.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Circular">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ThemeSwitcher.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>
    <style name="TextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>